<div class="row m-3" style="margin:auto;align-content:center;justify-content:center;">
    @foreach (var product in Model)
    {
        <div class="card col-lg-3 mx-3 my-3" style="width: 15rem;">
            <img src="@product.ImageUrl" class="card-img-top img-fluid py-2 img-shadow" alt="images" style="height: 300px;">
            <div class="card-body d-flex flex-column">
                <!-- added d-flex flex-column -->
                <h5 class="card-title text-center text-danger">@product.Title</h5>
                <p class="card-title text-info text-center" style="font-weight: bold;">@product.Publisher</p>
                <div class="row">
                    <div class="col-6 text-center">
                        <p style="font-weight: bold;">List Price <strike>$@product.ListPrice.ToString("0.00")</strike></p>
                    </div>
                    <div class="col-6 text-center">
                        <p><b>Discount $@product.Price100.ToString("0.00")</b></p>
                    </div>
                </div>
                <div class="mt-auto">
                    <!-- added mt-auto -->
                    <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>