</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#Input_Role").on("change", function () {
            var selectedRole = $(this).val();
            if (selectedRole == "Company") {
                $("#Input_CompanyId").show();
            } else {
                $("#Input_CompanyId").hide();
            }
        });
    </script>
